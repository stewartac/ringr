<!-- Search Form for ad-->
<div class="form">
  <h1>Search for games</h1>
  <%= form_tag games_path, method: :get, id: :search_form do %>
    <%= text_field_tag :address, params[:address], class: "form-style", placeholder: "Search by address" %>
    <%= submit_tag "Find a game", class: "home-button" %>
  <% end %>
</div>

<!-- GAME LIST -->
<div class="wrapping_games">
  <div class="w70">
    <% @games.each do |game| %>
      <div class="card-trip">
        <!-- <img src="https://images.unsplash.com/photo-1556056504-dc77ff4d11b0?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1036&q=80" /> -->
            <div class="left-side-card">
              <div class="main-card-info">
                <h1><%= game.team.name %> - <%= game.address %></h1>

                <h3>Kick-off - <%= game.date.strftime('%a %d %b %Y') %> <%= game.time.strftime("at %I:%M%p") %></h3>
              </div>
              <p>Distance to location</p>
            </div>
            <div class="right-side-card">
              <% if game.team.user.photo.attached? %>
                <%= cl_image_tag game.team.user.photo.key, class: "card-trip-user avatar-bordered" %>
              <% else %>
                <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
              <% end %>
              <h2> <%= game.available_spaces %> - players needed</h2>
            </div>
      </div>
    <% end %>

  </div>


  <!-- MAP -->

  <div id="map"
       style="width: 100%;
       height: 600px;"
       data-markers="<%= @markers.to_json %>"
       data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">

  </div>
</div>
<%# raise %>
